{
    "name": "captenmasin/laravel-like",
    "description": "üëç User-like features for Laravel Application.",
    "license": "MIT",
    "require": {
        "laravel/framework": "^9.0|^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Captenmasin\\LaravelLike\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^10.0.7",
        "orchestra/testbench": "^8.0|^9.0",
        "friendsofphp/php-cs-fixer": "^3.0.0",
        "brainmaestro/composer-git-hooks": "dev-master",
        "laravel/pint": "^1.2"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Captenmasin\\LaravelLike\\LikeServiceProvider"
            ]
        },
        "hooks": {
            "post-merge": "composer install"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always"
    },
    "scripts-descriptions": {
        "test": "Run all tests.",
    }
}
